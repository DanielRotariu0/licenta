FROM python:3.8-slim-buster

ENV IDM_MICROSERVICE_HOST idm-microservice
ENV IDM_MICROSERVICE_PORT 8090
ENV DATABASE_MICROSERVICE_HOST database-microservice
ENV DATABASE_MICROSERVICE_PORT 23050
ENV FILTER_MICROSERVICE_HOST filter-microservice
ENV FILTER_MICROSERVICE_PORT 23051
ENV NEWSFEED_MICROSERVICE_HOST newsfeed-microservice
ENV NEWSFEED_MICROSERVICE_PORT 23052
ENV JOB_APPLICATIONS_MICROSERVICE_HOST job-applications-microservice
ENV JOB_APPLICATIONS_MICROSERVICE_PORT 23053
ENV NOTIFICATIONS_MICROSERVICE_HOST notifications-microservice
ENV NOTIFICATIONS_MICROSERVICE_PORT 23054

COPY requirements.txt requirements.txt
RUN pip install -r requirements.txt

COPY . .

CMD [ "python3", "-m" , "flask", "run", "--host=0.0.0.0"]